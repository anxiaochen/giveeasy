<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.anxiao.giveeasy.activities.selectedCharity_activity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
           >
    <TextView
        android:id="@+id/title"
        android:text="charity name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="normal"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description"
        android:id="@+id/description"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/title"
        android:paddingTop="20dp" />

            <!-- phone -->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/call60"
                    android:id="@+id/phoneimg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="phone"
                    android:id="@+id/phonetext"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="20dp" />
            </RelativeLayout>


            <!-- email -->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/emailimg"
                    android:src="@drawable/envelope4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="emial"
                    android:id="@+id/emailtext"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="20dp" />
            </RelativeLayout>

            <!-- facebook -->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/facebookimg"
                    android:src="@drawable/facebook29"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="facebook url"
                    android:id="@+id/facebooktext"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="20dp"
                    android:linksClickable="true" />
            </RelativeLayout>

            <!-- Twitter -->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
               >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/Twitterimg"
                    android:src="@drawable/twitter2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Twitter url"
                    android:id="@+id/Twittertext"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="20dp"
                    android:linksClickable="true" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="RAISE TARGET"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold|italic"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp" />


            <!-- sum spinner-->

            <!-- custom sum-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Currency"
                android:id="@+id/currencyInfo"
                android:textColor="#125d0d"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:id="@+id/sumeditText"
                    android:ems="5"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />


            <!-- Frequency-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Frequency"
                android:id="@+id/textView2"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp" />

            <EditText
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:id="@+id/frequencyeditText"
                    android:ems="5"
                    android:layout_alignParentTop="true"
                    android:hint="e.g once/monthly"
                    android:layout_toStartOf="@+id/frequencyInfo"
                android:layout_marginBottom="20dp" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:id="@+id/addbutton"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                style="@style/button_text"
                android:background="@drawable/normal_buttonshape"/>


        </LinearLayout>
  </ScrollView>




</RelativeLayout>
