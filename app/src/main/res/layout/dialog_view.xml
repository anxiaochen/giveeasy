<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <ImageView
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/logo"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/dislogtext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:text="Do you want to check out now or continue shop?"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textIsSelectable="false" />/>

    <Button
        android:id="@+id/dialogButtonContinue"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text=" Continue "
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/image"
        style="@style/button_text"
        android:background="@drawable/normal_buttonshape"
        />

    <Button
        android:id="@+id/dialogButtonOK"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text=" Check out "
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/image"
        style="@style/button_text"
        android:background="@drawable/green_buttonshape"
        />

</LinearLayout>